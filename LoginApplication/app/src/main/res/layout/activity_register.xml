<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView_register_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학번/사번" />

    <EditText
        android:id="@+id/editText_register_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView_register_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호" />

    <EditText
        android:id="@+id/editText_register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView_register_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="거주관" />

    <EditText
        android:id="@+id/editText_register_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_register_insert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입" />

    <TextView
        android:id="@+id/textView_register_result"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

</LinearLayout>